<div class="container">
  <h1>Articles</h1>
  <p>Find all the articles from the community</p>
  <%= link_to "Create new article", new_article_path %>
  <% @articles.each do |article| %>
    <div class="product">
      <div class='product-upvote'>
        <div class="product-arrow"></div>
        <div class='product-count'><%= article.id %></div>
      </div>
      <div class='product-body'>
        <h3><%= link_to article.title, article_path(article) %></h3>
        <p><%= article.content %></p>
      </div>
      <ul class="list-inline product-controls hidden-sm hidden-xs">
        <li>
          <%= link_to edit_article_path(article) do %>
            <i class="fa fa-pencil"></i>
          <% end %>
        </li>
        <li>
          <%= link_to article_path(article), method: :delete do %>
            <i class="fa fa-trash"></i>
          <% end %>
        </li>
      </ul>
    </div>
  <% end %>
  <%= link_to "Create new article", new_article_path %>
</div>


